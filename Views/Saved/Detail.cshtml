@model NetworkConfigurator.Model.SavedViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int id = @Model.Network.ID;
}

<h2>Network Name: @Model.Network.Name</h2> <button class="btn btn-primary" onclick="GetFile()"> Download Configuration File </button>

<table id="hostTable" class="table table-striped table-inverse table-hover table-responsive">
    <caption id="hostsTitle">Hosts</caption>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Adapter</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var host in Model.Hosts)
        {
        <tr>
            <th scope="row">@host.ID</th>
            <td>@host.Name</td>
            <td>@host.Adapter</td>
        </tr>
        }
    </tbody>
</table>

<table id="hostTable" class="table table-striped table-inverse table-hover table-responsive">
    <caption id="hostsTitle">Switchs</caption>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Adapter</th>
            <th>Ports</th>
            <th>Connections</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sw in Model.Switchs)
        {
            <tr>
                <th scope="row">@sw.ID</th>
                <td>@sw.Name</td>
                <td>@sw.Adapter</td>
                <td>@sw.ports</td>
                <td>@sw.connectedHosts.Count </td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript" src="~/js/Detail.js"></script>